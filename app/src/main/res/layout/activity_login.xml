<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ozcaan11.l50.parsecom_listactivity_example.LoginActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/editText_kullaniciadi"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:inputType="textPersonName"
        android:hint="@string/hint_kullanici_adi"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/editText_sifre"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/editText_kullaniciadi"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:hint="@string/hint_sifre"
        android:fontFamily="sans"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/btn_login_giris"
        android:id="@+id/btn_login_giris"
        android:layout_below="@+id/editText_sifre"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

</RelativeLayout>
