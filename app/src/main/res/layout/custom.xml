<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:weightSum="1">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#e6e6e6">
        android:layout_width="wrap_content"
        android:layout_height="match_parent_content"

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView_kullanici_adi"
            android:text="kullan覺c覺 ad覺:"
            android:textStyle="italic"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:layout_marginTop="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView_mesaj"
            android:text="mesaj"
            android:layout_marginLeft="0dp"
            android:textColor="#34354d"
            android:textSize="20sp"
            android:layout_below="@+id/textView_kullanici_adi"
            android:layout_alignStart="@+id/textView_kullanici_adi"
            android:layout_marginTop="3dp"
            android:overScrollMode="never"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="tarih sonra yap覺lacak"
            android:id="@+id/textView_tarih"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>